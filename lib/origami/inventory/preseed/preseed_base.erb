## Default user, we can get away with a recipe to change this
# d-i passwd/user-fullname string vagrant
# d-i passwd/username string vagrant
# d-i passwd/user-password password vagrant
# d-i passwd/user-password-again password vagrant
# d-i user-setup/encrypt-home boolean false
# d-i user-setup/allow-password-weak boolean true
d-i passwd/root-login boolean true
d-i passwd/root-password password puppet
d-i passwd/root-password-again password puppet
# yes to 'password too weak! use it anyways?'
d-i user-setup/allow-password-weak boolean true
# don't create a normal user
d-i passwd/make-user boolean false


# Individual additional packages to install
d-i pkgsel/include string <%= pkgs * ' ' %>

# Whether to upgrade packages after debootstrap.
# Allowed values: none, safe-upgrade, full-upgrade
d-i pkgsel/upgrade select none

d-i grub-installer/only_debian boolean true
d-i grub-installer/with_other_os boolean true
d-i finish-install/reboot_in_progress note

#For the update
d-i pkgsel/update-policy select none

# Debian Specific
apt-cdrom-setup apt-setup/cdrom/set-first boolean false
popularity-contest popularity-contest/participate boolean false
apt-mirror-setup apt-setup/use_mirror boolean false

# debconf-get-selections --install
##Use mirror
d-i mirror/country string us
d-i mirror/http/hostname string archive.ubuntu.com
d-i mirror/http/directory string /ubuntu
d-i mirror/http/proxy string

d-i mirror/suite string <%= suite %>
d-i mirror/udev/suite string <%= suite %>
d-i mirror/udev/components multiselect main, restricted, universe
